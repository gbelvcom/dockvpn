#!/bin/sh
set -e

echo "🔧 Настройка VPN сервера..."

# Убеждаемся, что туннельный интерфейс существует
[ -d /dev/net ] || mkdir -p /dev/net
[ -c /dev/net/tun ] || mknod /dev/net/tun c 10 200

cd /etc/openvpn

# Создаём файлы, если их нет
touch placeholder

[ -f dh.pem ] || openssl dhparam -out dh.pem 2048
[ -f key.pem ] || openssl genrsa -out key.pem 2048
chmod 600 key.pem
[ -f csr.pem ] || openssl req -new -key key.pem -out csr.pem -subj /CN=OpenVPN/
[ -f cert.pem ] || openssl x509 -req -in csr.pem -out cert.pem -signkey key.pem -days 24855

# Конфигурация OpenVPN (TCP 443)
[ -f tcp443.conf ] || cat >tcp443.conf <<EOF
server 192.168.255.0 255.255.255.128
verb 3
duplicate-cn
key key.pem
ca cert.pem
cert cert.pem
dh dh.pem
keepalive 10 60
persist-key
persist-tun
push "redirect-gateway def1 bypass-dhcp"
push "dhcp-option DNS 8.8.8.8"
push "dhcp-option DNS 1.1.1.1"
cipher AES-256-CBC
auth SHA512
tls-version-min 1.2
proto tcp-server
port 443
dev tun443
status openvpn-status-443.log
EOF

# Конфигурация OpenVPN (UDP 1194)
[ -f udp1194.conf ] || cat >udp1194.conf <<EOF
server 192.168.255.128 255.255.255.128
verb 3
duplicate-cn
key key.pem
ca cert.pem
cert cert.pem
dh dh.pem
keepalive 10 60
persist-key
persist-tun
push "redirect-gateway def1 bypass-dhcp"
push "dhcp-option DNS 8.8.8.8"
push "dhcp-option DNS 1.1.1.1"
cipher AES-256-CBC
auth SHA512
tls-version-min 1.2
proto udp
port 1194
dev tun1194
status openvpn-status-1194.log
EOF

# Определяем внешний IP сервера
MY_IP_ADDR=$(curl -s http://ifconfig.me)
[ "$MY_IP_ADDR" ] || {
    echo "Ошибка: не удалось определить внешний IP."
    exit 1
}

# Конфигурация клиента OpenVPN
[ -f client.ovpn ] || cat >client.ovpn <<EOF
client
nobind
dev tun
redirect-gateway def1

<key>
`cat key.pem`
</key>
<cert>
`cat cert.pem`
</cert>
<ca>
`cat cert.pem`
</ca>
<dh>
`cat dh.pem`
</dh>

<connection>
remote $MY_IP_ADDR 1194 udp
</connection>

<connection>
remote $MY_IP_ADDR 443 tcp-client
</connection>
EOF

# Выдача `.ovpn` через HTTP
[ -f client.http ] || cat >client.http <<EOF
HTTP/1.0 200 OK
Content-Type: application/x-openvpn-profile
Content-Length: `wc -c client.ovpn`

`cat client.ovpn`
EOF

# Ожидание, пока ВСЕ файлы будут готовы перед запуском OpenVPN
echo "⏳ Ожидание генерации всех файлов..."
while [ ! -f dh.pem ] || [ ! -f tcp443.conf ] || [ ! -f udp1194.conf ] || [ ! -f client.ovpn ]; do
    sleep 2
    echo "🔄 Генерация файлов ещё не завершена..."
done
echo "✅ Все файлы созданы, запускаем VPN!"

# Настройка маскировки VPN через STUNNEL (HTTPS)
cat > /etc/stunnel/stunnel.conf <<EOF
[openvpn]
accept = 443
connect = 127.0.0.1:1194
cert = /etc/openvpn/cert.pem
key = /etc/openvpn/key.pem
EOF

stunnel /etc/stunnel/stunnel.conf &

# Пробрасываем трафик для клиентов VPN
iptables -t nat -A POSTROUTING -s 192.168.255.0/24 -o eth0 -j MASQUERADE

# Запускаем OpenVPN (TCP + UDP)
touch tcp443.log udp1194.log http8080.log
while true ; do openvpn --config tcp443.conf ; done >> tcp443.log &
while true ; do openvpn --config udp1194.conf ; done >> udp1194.log &
tail -F *.log